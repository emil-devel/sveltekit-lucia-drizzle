{
	"name": "sveltekit-lucia-drizzle",
	"private": true,
	"version": "1.0.0",
	"keywords": [
		"user management",
		"user roles",
		"lucia",
		"sveltekit",
		"drizzle",
		"postgres"
	],
	"description": "User management with Lucia-Auth authentication and Roles (User, Redacteur, Admin). Realized with: Sveltekit, Skeleton UI, SuperForms, Valibot, Drizzle, Postgres Database.",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@skeletonlabs/skeleton": "^4.11.0",
		"@skeletonlabs/skeleton-svelte": "^4.11.0",
		"@sveltejs/adapter-node": "^5.5.2",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@tiptap/core": "^2.27.2",
		"@tiptap/pm": "2.26.2",
		"@types/node": "^24.10.9",
		"drizzle-kit": "^0.30.6",
		"drizzle-orm": "^0.40.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^16.5.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.48.3",
		"svelte-check": "^4.3.5",
		"sveltekit-flash-message": "^2.4.6",
		"sveltekit-superforms": "^2.29.1",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"valibot": "^1.2.0",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"dependencies": {
		"@friendofsvelte/tipex": "^0.0.9",
		"@lucide/svelte": "^0.546.0",
		"@node-rs/argon2": "^2.0.2",
		"postgres": "^3.4.8"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
